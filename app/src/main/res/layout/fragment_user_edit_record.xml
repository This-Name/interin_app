<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rectangle_for_other_elements"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fuer_record1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="@string/record_data"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fuer_record2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/data"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fuer_record3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/data"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fuer_record4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/data"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/fuer_record5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/data"
        android:textSize="20sp" />

    <Button
        android:id="@+id/fuer_delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/rectangle_for_list"
        android:text="@string/cancel_appointment" />

</LinearLayout>