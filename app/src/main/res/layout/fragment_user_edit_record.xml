<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_rectangle_for_other_elements"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fuer_record1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/record_data"
        android:textSize="20sp"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fuer_record2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/fuer_record2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:textSize="20sp"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@id/fuer_record1"
        app:layout_constraintBottom_toTopOf="@id/fuer_record3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/fuer_record3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:textSize="20sp"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@id/fuer_record2"
        app:layout_constraintBottom_toTopOf="@id/fuer_record4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/fuer_record4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:textSize="20sp"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@id/fuer_record3"
        app:layout_constraintBottom_toTopOf="@id/fuer_record5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/fuer_record5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:textSize="20sp"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@id/fuer_record4"
        app:layout_constraintBottom_toTopOf="@id/fuer_delete_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/fuer_delete_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/cancel_appointment"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/rectangle_for_list"
        app:layout_constraintTop_toBottomOf="@id/fuer_record5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>