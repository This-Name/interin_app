<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fuer_doctor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Данные пользователя"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fuer_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/fuer_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Данные пользователя"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/fuer_doctor"
        app:layout_constraintBottom_toTopOf="@id/fuer_delete_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:id="@+id/fuer_delete_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Отменить запись"
        app:layout_constraintTop_toBottomOf="@id/fuer_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>